@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
	ViewData["css_file_name"] = "index";
}

<section>
	<div class="gap gray-bg">
		<div class="container-fluid">
			<div class="row">
				<div class="col-lg-12">
					<div class="row" id="page-contents">
						<div class="col-lg-3">
							<aside class="sidebar static">
								<div class="widget">
									<h4 class="widget-title">Shortcuts</h4>
									<ul class="naves">
										<li>
											<i class="ti-clipboard"></i>
											<a href="ResourceFeed" title="">Resource Feed</a>
										</li>
										<li>
											<i class="ti-files"></i>
											<a href="fav-resources" title="">My favorite resources</a>
										</li>
										<li>
										<i class="ti-clipboard"></i>
										<a href="Profile" title="">My Profile</a>
										</li>
										<li>
											<i class="ti-power-off"></i>
											<a href="Login" title="">Log out</a>
										</li>
									</ul>
								</div><!-- Shortcuts -->
							</aside>
						</div><!-- sidebar -->
						<div class="col-lg-6">
							<div class="central-meta">
								<div class="new-postbox">
									<figure>
										<img src="images/resources/admin2.jpg" alt="">
									</figure>
									<div class="newpst-input">
										<form method="post">
											<textarea rows="2" placeholder="write something"></textarea>
											<div class="attachments">
												<ul>
													<li>
														<i class="fa fa-music"></i>
														<label class="fileContainer">
															<input type="file">
														</label>
													</li>
													<li>
														<i class="fa fa-image"></i>
														<label class="fileContainer">
															<input type="file">
														</label>
													</li>
													<li>
														<i class="fa fa-video-camera"></i>
														<label class="fileContainer">
															<input type="file">
														</label>
													</li>
													<li>
														<i class="fa fa-camera"></i>
														<label class="fileContainer">
															<input type="file">
														</label>
													</li>
													<li>
														<button type="submit">Post</button>
													</li>
													<li>
														<button type="submit" style="background-color:#28a745; color:#fff;">Post with Promotion</button>
													</li>
												</ul>
											</div>
										</form>
									</div>
								</div>
							</div><!-- add post new box -->
							<div class="loadMore">
								@{
									ViewData["usernames"] = Model.usernames;
									for(int i = 0; i < 5; i++)
									{
										<partial name="Post Elements/_community-post" view-data="ViewData"/>
									}
								}
							</div>
						</div><!-- centerl meta -->
						<div class="col-lg-3">
							<aside class="sidebar static">
								<div class="widget">
									<h4 class="widget-title">Google Scholar Account</h4>	
									<div class="your-page">
										<figure>
											<a href="#" title=""><img src="images/resources/admin2.jpg" alt=""></a>
										</figure>
										<div class="page-meta">
											<a href="https://scholar.google.com.eg/citations?hl=en&user=wejiWMcAAAAJ&view_op=list_works&sortby=pubdate" title="" class="underline">Researcher Profile</a>
										</div>
										<div class="page-likes">
											<ul class="nav nav-tabs likes-btn">
												<li class="nav-item"><a class="active" href="https://scholar.google.com.eg/citations?hl=en&user=wejiWMcAAAAJ&view_op=list_works" data-toggle="tab">Citations</a></li>
												<li class="nav-item"><a class="active" href="https://scholar.google.com.eg/citations?hl=en&user=wejiWMcAAAAJ&view_op=list_works&sortby=pubdate" data-toggle="tab">Latest</a></li>
											</ul>
											<!-- Tab panes -->
											<div class="tab-content">
												<div class="tab-pane active fade show " id="link1" >
													<span><i class="fa fa-book"></i>273</span>
												</div>
											</div>
										</div>
										</div>
									</div>
								</div>
							</aside>
						</div><!-- sidebar -->
					</div>	
				</div>
			</div>
		</div>
	</div>	
</section>